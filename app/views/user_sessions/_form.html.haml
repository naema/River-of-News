.row
  .col-md-4
    = form_tag user_sessions_path, method: :post do
      .form-group
        = label_tag :email, 'Email', class: 'control-label'
        = text_field_tag :email, '', class: 'form-control', required: ''
      .form-group
        = label_tag :password, 'Password', class: 'control-label'
        = password_field_tag :password, '', class: 'form-control', required: ''
      .form-group
        = submit_tag "Login", class: 'btn btn-success'
